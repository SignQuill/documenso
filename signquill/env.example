# SignQuill Branding Configuration
# Copy this file to .env and customize as needed

# Core Branding
NEXT_PUBLIC_APP_NAME=SignQuill
NEXT_PUBLIC_APP_SHORT_NAME=SignQuill

# Email Branding
NEXT_PRIVATE_SMTP_FROM_NAME=SignQuill
NEXT_PRIVATE_SMTP_FROM_ADDRESS=noreply@signquill.local
NEXT_PRIVATE_SERVICE_USER_EMAIL=serviceaccount@signquill.local

# Authentication Branding
NEXT_PRIVATE_AUTH_ISSUER=SignQuill
NEXT_PRIVATE_AUTH_RP_NAME=SignQuill

# Webhook Branding
NEXT_PRIVATE_WEBHOOK_SECRET_HEADER=X-SignQuill-Secret

# Signing Branding
NEXT_PRIVATE_SIGNING_CERTIFICATE_TEXT=Signed by SignQuill

# Analytics Branding
NEXT_PRIVATE_ANALYTICS_DOMAIN=signquill.com

# Company Branding
NEXT_PUBLIC_COMPANY_NAME=SignQuill, Inc.
NEXT_PUBLIC_COMPANY_NAME_NO_COMMA=SignQuill Inc.

# Database Configuration
DATABASE_URL=postgresql://signquill:password@localhost:54320/signquill
NEXT_PRIVATE_DATABASE_URL=postgresql://signquill:password@localhost:54320/signquill
NEXT_PRIVATE_DIRECT_DATABASE_URL=postgresql://signquill:password@localhost:54320/signquill

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Encryption Keys (for development only)
NEXT_PRIVATE_ENCRYPTION_KEY=CAFEBABE
NEXT_PRIVATE_ENCRYPTION_SECONDARY_KEY=DEADBEEF

# Storage Configuration
NEXT_PRIVATE_S3_ENDPOINT=http://localhost:9002
NEXT_PRIVATE_S3_ACCESS_KEY=signquill
NEXT_PRIVATE_S3_SECRET_KEY=password
NEXT_PRIVATE_S3_BUCKET=signquill
NEXT_PRIVATE_S3_REGION=us-east-1

# Email Configuration
NEXT_PRIVATE_SMTP_HOST=localhost
NEXT_PRIVATE_SMTP_PORT=2500
NEXT_PRIVATE_SMTP_USER=signquill
NEXT_PRIVATE_SMTP_PASSWORD=password

# Feature Flags
NEXT_PUBLIC_FEATURE_FLAG_BILLING=true
NEXT_PUBLIC_FEATURE_FLAG_TEAMS=true

# Jobs and Internal URLs
NEXT_PRIVATE_JOBS_PROVIDER=local
NEXT_PRIVATE_INTERNAL_WEBAPP_URL=http://localhost:3000

# Redis
REDIS_URL=redis://localhost:6379 