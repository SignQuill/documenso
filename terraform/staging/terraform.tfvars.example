# =============================================================================
# Documenso Staging Environment - Terraform Variables Example
# =============================================================================
# 
# Copy this file to terraform.tfvars and update the values as needed.
# This file contains the variables for the Terraform configuration.
# =============================================================================

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "documenso"
environment  = "staging"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones_count = 2

# Subnet Configuration
public_subnets_cidr  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets_cidr = ["10.0.11.0/24", "10.0.12.0/24"]

# EC2 Configuration
instance_type     = "t3.medium"
root_volume_size  = 20
app_port          = 3000

# Security Configuration
# IMPORTANT: Replace with your actual SSH public key
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC..."

# SSH Access (restrict this for production)
allowed_ssh_cidr_blocks = ["0.0.0.0/0"] 