# Documenso Staging Environment Configuration
# Copy this file to .env and update the values as needed

# Application Configuration
PORT=3000
NODE_ENV=staging

# Database Configuration
POSTGRES_USER=documenso
POSTGRES_PASSWORD=documenso_staging_password
POSTGRES_DB=documenso_staging
NEXT_PRIVATE_DATABASE_URL=postgresql://documenso:documenso_staging_password@database:5432/documenso_staging
NEXT_PRIVATE_DIRECT_DATABASE_URL=postgresql://documenso:documenso_staging_password@database:5432/documenso_staging

# Authentication
NEXTAUTH_SECRET=staging_secret_key_change_in_production
NEXT_PRIVATE_ENCRYPTION_KEY=STAGING_KEY_123456789
NEXT_PRIVATE_ENCRYPTION_SECONDARY_KEY=STAGING_SECONDARY_987654321

# URLs
NEXT_PUBLIC_WEBAPP_URL=http://localhost:3000
NEXT_PRIVATE_INTERNAL_WEBAPP_URL=http://localhost:3000

# SMTP Configuration (using console for staging)
NEXT_PRIVATE_SMTP_TRANSPORT=console
NEXT_PRIVATE_SMTP_FROM_NAME=Documenso Staging
NEXT_PRIVATE_SMTP_FROM_ADDRESS=noreply@staging.documenso.com

# Optional: Configure real SMTP for staging
# NEXT_PRIVATE_SMTP_TRANSPORT=smtp-auth
# NEXT_PRIVATE_SMTP_HOST=smtp.example.com
# NEXT_PRIVATE_SMTP_PORT=587
# NEXT_PRIVATE_SMTP_USERNAME=your_username
# NEXT_PRIVATE_SMTP_PASSWORD=your_password
# NEXT_PRIVATE_SMTP_SECURE=false

# Storage Configuration (using database for staging)
NEXT_PUBLIC_UPLOAD_TRANSPORT=database
NEXT_PUBLIC_DOCUMENT_SIZE_UPLOAD_LIMIT=10485760

# Optional: Configure S3 for staging
# NEXT_PUBLIC_UPLOAD_TRANSPORT=s3
# NEXT_PRIVATE_UPLOAD_ENDPOINT=https://s3.amazonaws.com
# NEXT_PRIVATE_UPLOAD_REGION=us-east-1
# NEXT_PRIVATE_UPLOAD_BUCKET=your-staging-bucket
# NEXT_PRIVATE_UPLOAD_ACCESS_KEY_ID=your_access_key
# NEXT_PRIVATE_UPLOAD_SECRET_ACCESS_KEY=your_secret_key

# Google OAuth (optional)
# NEXT_PRIVATE_GOOGLE_CLIENT_ID=your_google_client_id
# NEXT_PRIVATE_GOOGLE_CLIENT_SECRET=your_google_client_secret

# Stripe Configuration (optional for staging)
# NEXT_PRIVATE_STRIPE_API_KEY=sk_test_your_stripe_test_key
# NEXT_PRIVATE_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# NEXT_PUBLIC_FEATURE_BILLING_ENABLED=false

# Analytics (optional)
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key

# Features
# NEXT_PUBLIC_DISABLE_SIGNUP=false

# Signing Certificate (optional)
# NEXT_PRIVATE_SIGNING_LOCAL_FILE_PATH=/opt/documenso/cert.p12
# NEXT_PRIVATE_SIGNING_PASSPHRASE=your_certificate_passphrase 